generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id                 Int      @id @default(autoincrement())
  clubId             Int      @unique
  name               String
  description        String?
  longitude          Float
  latitude           Float
  isHidden           Boolean  @default(false)
  qrCodeSuffixConfig String
  timestamp          BigInt
  isDeleted          Boolean  @default(false)

  address            Address?
}

model Address {
  id        Int    @id @default(autoincrement())
  country   String
  city      String
  postalCode String?
  line1     String
  line2     String?

  clubId    Int    @unique
  club      Club   @relation(fields: [clubId], references: [id])
}
